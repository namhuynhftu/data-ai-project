# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Snowflake Configuration (Choose ONE authentication method)
SNOWFLAKE_ACCOUNT=your_account_id
SNOWFLAKE_USER=your_username
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=DB_T25
SNOWFLAKE_SCHEMA=ANALYTICS
SNOWFLAKE_ROLE=your_role

# Option 1: Password Authentication
# SNOWFLAKE_PASSWORD=your_password

# Option 2: JWT Key-Pair Authentication (Recommended)
SNOWFLAKE_PRIVATE_KEY_FILE_PATH=/path/to/rsa_key.p8
SNOWFLAKE_PRIVATE_KEY_FILE_PWD=your_passphrase

# PostgreSQL Configuration (Streaming Data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=streaming_db
POSTGRES_SCHEMA=kafka_streaming

# Vector Store Configuration
VECTOR_STORE_PATH=./vector_store
CHROMA_COLLECTION_NAME=documents

# Document Storage
DOCUMENTS_PATH=./documents

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=*

# Agent Configuration
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1
MAX_SQL_RESULTS=100
RAG_TOP_K=4
RAG_SCORE_THRESHOLD=0.5

# Logging
LOG_LEVEL=INFO
